<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simplelay4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/itemlay"
    android:orientation="horizontal"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/applytxt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:lines="2"
            android:background="@color/sweet_dialog_bg_color"
            android:layout_weight="0.33" />
        <TextView
            android:id="@+id/applytxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:lines="2"
            android:background="@color/sweet_dialog_bg_color"
            android:layout_weight="0.33" />
        <TextView
            android:id="@+id/applytxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:lines="2"
            android:background="@color/sweet_dialog_bg_color"
            android:layout_weight="0.33" />
        <TextView
            android:id="@+id/applytxt3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="5sp"
            android:lines="2"
            android:background="@color/sweet_dialog_bg_color"
            android:layout_weight="0.33" />
        <Button
            android:id="@+id/simplebutton5_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:background="@color/colorPaleGreen"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>